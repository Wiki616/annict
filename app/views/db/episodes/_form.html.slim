= form_for [:db, work, episode], html: { class: "form-horizontal" } do |f|
  = render "application/error_panel", resource: episode

  .form-group
    = f.label :number, class: "col-sm-3 control-label"
    .col-sm-9
      = f.text_field :number, class: "form-control"
  .form-group
    = f.label :sort_number, class: "col-sm-3 control-label"
    .col-sm-9
      = f.text_field :sort_number, class: "form-control"
  .form-group
    = f.label :title, class: "col-sm-3 control-label"
    .col-sm-9
      = f.text_field :title, class: "form-control"
  .form-group
    = f.label :next_episode_id, class: "col-sm-3 control-label"
    .col-sm-9
      = f.select :next_episode_id, options_for_select(work.episodes.order(:sort_number).map { |episode| ["#{episode.number} #{episode.title}", episode.id] }, episode.next_episode_id), { include_blank: true }, { class: "form-control" }
  .form-group
    .col-sm-offset-3.col-sm-9
      = f.submit class: "btn btn-primary"
